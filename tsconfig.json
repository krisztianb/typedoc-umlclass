{
    "include": ["src"],
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2015",
        "lib": ["ES2015", "DOM"],
        "module": "NodeNext",
        "declaration": true,
        "baseUrl": "./",
        "strict": true,
        "noImplicitOverride": true,
        "exactOptionalPropertyTypes": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "verbatimModuleSyntax": true
    }
}
